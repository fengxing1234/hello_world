    <TextView
        android:text="sim卡状态"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_show_sim_state"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <TextView
        android:text="sim卡序列号"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
